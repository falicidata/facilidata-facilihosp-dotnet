@using Facilidata.FaciliHosp.Infra.Identity.Enums
@model RegistroUsuarioViewModel

@{
    ViewData["Title"] = "Registro";
    var tiposUsuario = Enum.GetNames(typeof(ETipoUsuario)).ToList();
    var tiposSelectList = tiposUsuario.Select((tipo, index) => new SelectListItem(tipo, index.ToString()));


}

    <form>
        <div class="form-group">
            <label>Tipo de Usuario</label>
            <select asp-for="Tipo" asp-items="tiposSelectList" class="form-control"  ></select>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" >
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input type="password" asp-for="Senha" class="form-control">
        </div>
        <div class="form-group">
            <label>Confirmação da Senha</label>
            <input type="password" asp-for="ConfirmacaoSenha" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Usuario"  asp-action="Registrar">Registrar</button>
    </form>

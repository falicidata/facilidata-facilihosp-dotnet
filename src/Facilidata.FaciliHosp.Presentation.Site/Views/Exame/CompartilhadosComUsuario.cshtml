@model List<CompartilhadosViewModel>

@{
    ViewData["Title"] = "Exames Compartilhados Comigo";
}

<div class="container">
    <br /><br />
    <div class="is-size-3">
        <span class="icon"><i class="fas fa-file-medical-alt"></i></span>
        <span>Lista de Exames</span>
    </div>
    <br /><br />
    <a class="button is-success" asp-controller="Exame" asp-action="Editar">
        <span class="icon">
            <i class="fas fa-plus"></i>
        </span>
        <span>
            Adicionar Exame
        </span>
    </a>


    <br /><br />
    <div class="tabs">
        <ul>
            <li>

                <a asp-controller="Exame" asp-action="Index">
                    <span class="icon is-small"><i class="fas fa-file-medical" aria-hidden="true"></i></span>
                    <span>Exames</span>
                </a>
            </li>
            <li>
                <a asp-controller="Exame" asp-action="Compartilhados">
                    <span class="icon is-small"><i class="fas fa-share-square" aria-hidden="true"></i></span>
                    <span>Compartilhados</span>

                </a>
            </li>
            <li class="is-active">
                <a>
                    <span class="icon is-small"><i class="far fa-share-square" aria-hidden="true"></i></span>
                    <span>Compartilhados Comigo</span>

                </a>
            </li>

        </ul>
    </div>
    <table class="table is-striped is-narrow is-hoverable is-fullwidth has-text-centered">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Data do Exame</th>
                <th>Usuario</th>
                <th>Expira Em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exame in Model)
            {
                <tr>
                    <td>@exame.Tipo</td>
                    <td>@exame.Data</td>
                    <td>@exame.UsuarioCompartilhado</td>
                    <td>@exame.ExpiraEm</td>
                    <td>
                        <a class="button is-info" asp-action="VisualizarCompartilhado" asp-route-id="@exame.ExameId"  data-tooltip="Visualizar Exame">
                            <span class="icon">
                                <i class="fas fa-eye"></i>
                            </span>
                        </a>
                        <a class="button is-success" asp-action="Retorno" asp-route-id="@exame.ExameId"  data-tooltip="Adicionar Retorno">
                            <span class="icon">
                                <i class="fas fa-check"></i>
                            </span>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
@{
    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bulma-0.9.0/css/bulma.min.css">
    <link rel="stylesheet" href="~/lib/bulma-0.9.0/css/bulma-carousel.min.css">
    <link rel="stylesheet" href="~/lib/bulma-0.9.0/css/bulma-divider.css" />
</head>

<body>

    <section class="hero has-carousel is-fullheight is-fullwidth">
        <div class="hero-carousel slider">
            <div class="item-1">
                <div class="has-background has-text-centered">
                    <img class="is-background" src="~/assets/home0.jpg" alt="" />
                </div>
            </div>
            <div class="item-2">
                <div class="has-background">
                    <img class="is-background" src="~/assets/home1.jpg" alt="" />
                </div>
            </div>
            <div class="item-3">
                <div class="has-background">
                    <img class="is-background" src="~/assets/home2.jpg" alt="" />
                </div>
            </div>
        </div>
        <div class="hero-head">
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-brand">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <figure class="image is-64x64 mt-1">
                                <img src="~/assets/icons/logo.png" alt="Logo">
                            </figure>
                        </a>
                    </div>
                    <div id="navbarMenuHeroA" class="navbar-menu">
                        <div class="navbar-end">
                            <span class="navbar-item">
                                <a class="is-info button label is-medium" asp-controller="Usuario" asp-action="Login">
                                    <span>Login</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="hero-body"></div>
        <div class="hero-foot"></div>
    </section>
    <script src="~/js/bulma-carousel.min.js"></script>
    <script>
        var carousels = bulmaCarousel.attach('.hero-carousel', {
            slidesToScroll: 1,
            slidesToShow: 1,
            pagination: false,
            effect: 'fade',
            loop: true,
            duration: 500,
            autoplay: true
        });
    </script>

</body>

</html>









